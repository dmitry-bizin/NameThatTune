<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>

<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.Pane?>
<?import java.awt.*?>
<Pane xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="controller.include.SettingsRoundController"
      stylesheets="@../../css/style.css" styleClass="settingsRoundBackground"
      fx:id="pane">

    <fx:define>
        <Toolkit fx:factory="getDefaultToolkit" fx:id="screen"/>
    </fx:define>

    <fx:script>
        pane.setMinHeight(screen.getScreenSize().getHeight());
        pane.setMinWidth(screen.getScreenSize().getWidth());
    </fx:script>

    <Label fx:id="infoLabel" styleClass="settingsRoundInfoLabel">
        <fx:script>
            infoLabel.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            infoLabel.setLayoutY(0.1 * screen.getScreenSize().getHeight());
        </fx:script>
    </Label>

    <Label fx:id="category1Label" styleClass="settingsRoundLabel" onMouseClicked="#category1LabelClick">
        <fx:script>
            category1Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            category1Label.setLayoutY(0.2 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="category2Label" styleClass="settingsRoundLabel" onMouseClicked="#category2LabelClick">
        <fx:script>
            category2Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            category2Label.setLayoutY(0.3 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="category3Label" styleClass="settingsRoundLabel" onMouseClicked="#category3LabelClick">
        <fx:script>
            category3Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            category3Label.setLayoutY(0.4 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="category4Label" styleClass="settingsRoundLabel"
           onMouseClicked="#category4LabelClick">
        <fx:script>
            category4Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            category4Label.setLayoutY(0.5 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="backLabel" text="Назад" styleClass="settingsRoundLabel" onMouseClicked="#backLabelClick">
        <fx:script>
            backLabel.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            backLabel.setLayoutY(0.6 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

</Pane>
