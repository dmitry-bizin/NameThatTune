<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>

<?import javafx.scene.control.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.Pane?>
<?import java.awt.*?>
<Pane xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="controller.GameController"
      stylesheets="@../css/style.css"
      styleClass="gameBackground"
      fx:id="pane">

    <fx:define>
        <Toolkit fx:factory="getDefaultToolkit" fx:id="screen"/>
    </fx:define>

    <Label fx:id="round1Label" text="1 тур" styleClass="gameLabel" onMouseClicked="#round1LabelClick">
        <fx:script>
            round1Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            round1Label.setLayoutY(0.1 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="round2Label" text="2 тур" styleClass="gameLabel" onMouseClicked="#round2LabelClick">
        <fx:script>
            round2Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            round2Label.setLayoutY(0.2 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="round3Label" text="3 тур" styleClass="gameLabel" onMouseClicked="#round3LabelClick">
        <fx:script>
            round3Label.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            round3Label.setLayoutY(0.3 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="superGameLabel" text="Суперигра" styleClass="gameLabel" onMouseClicked="#superGameLabelClick">
        <fx:script>
            superGameLabel.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            superGameLabel.setLayoutY(0.4 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

    <Label fx:id="backLabel" text="Назад" styleClass="gameLabel" onMouseClicked="#backLabelClick">
        <fx:script>
            backLabel.setLayoutX(0.03 * screen.getScreenSize().getWidth());
            backLabel.setLayoutY(0.5 * screen.getScreenSize().getHeight());
        </fx:script>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Label>

</Pane>
